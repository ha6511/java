package com.ict.edu;

public class Ex01 {
	public static void main(String[] args) {
		//	단순 if : 조건이 참일때만 실행, 거짓일때는 if 문 무시
		//	조건식은 boolean, 비교연산, 논리연산
		//	형식 : if ( 조건식 ) {
		//				조건식이 참일때 실행문장;
		//				조건식이 참일때 실행문장;
		//			}
		//	단 실행문장이 한줄일때는 {} 생략가능
		
		//	int k1 이 60 이상이면 합격
		
		int	k1 = 79;
		String str = "초기값";
		
		if (k1 >=60)	{
			str	=	"합격";
		}
		System.out.println(k1 + "은 " + str + "입니다.\n 수고하셨습니다.);
		
	}
}
