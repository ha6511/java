	String	res	=	"";
	
	// int k1가 홀수인지 짝수인지 판별하자
	int k1 = 7;
	res	=	(k1%2 == 0) ? "짝수" : "홀수";
	System.out.println(k1 +"은 " + res + "입니다.");
	
	// int k2가 60 이상이면 합격 아니면 불합격
	int k2 = 76;
	
	// chark3 = 대문자 인지 대문자가 아닌지 판별하자 
	int k3 ='H';
	
	// 근무시간이 8시간까지는 시간당 8,590 원이고
	// 8시간 초과한 시간만큼 1.5배 지급한다.
	// 현재근무시간이 10 이다.
	// 얼마를 받아야 하는가?
	int time = 10;
	int dan = 8590;
	int limit = 8;
	
	
