package com.ict.edu;

import java.util.Scanner;

public class Ex04 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		while(true) {
			System.out.print("숫자 입력 =>");
			int num = sc.nextInt();
			String result = "";
			String conti  = "";
			
			if (num % 2 == 0) {
				result =  "짝수";
			} else 	{
				result =  "홀수";
			}
			System.out.println("결과 : "+ result);
			
			System.out.print("계속할까요? (1.yes. 2.no) : ");
			conti = sc.next();
			if (conti == "2") {
				break;
			}
		}
		
	}
}
